@model SkinsAdmin.Models.Mods

@{
    Layout = null;
}

<form asp-action="Edit" method="post" class="ajaxForm" tname="#dataTableId" id="myForm" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Name" asp-for="ModName" class="form-control-label"></label>
                <input asp-for="ModName" class="form-control">
                <span asp-validation-for="ModName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 text-left">
            <div class="form-group">
                <label for="CategoryId" asp-for="CategoryId" class="form-control-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.listCategory" data-size="6" data-live-search="true" class="rounded selectpicker" data-width="100%">
                    <option value="">Select category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="ModUrl" asp-for="ModUrl" class="form-control-label"></label>
                <input asp-for="ModUrl" class="form-control">
                <span asp-validation-for="ModUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="ModDescription" asp-for="ModDescription" class="form-control-label"></label>
                <textarea asp-for="ModDescription" class="form-control border-primary" rows="3"></textarea>
                <span asp-validation-for="ModDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="ThumbnailPath" asp-for="ModThumbnailPath" class="form-control-label"></label>
                <div class="card" style=" border: 3px solid #17c67a;border-radius:8px;background-color:#F6F6F6">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md text-center">
                                @if (Model.ModThumbnailPath != null)
                                {
                                    <img src="@Model.ModThumbnailPath" id="imageThumbnailPathId" width="130px" height="106px" />
                                }
                                else
                                {
                                    <img src="~/files/Default/Image2.png" id="imageThumbnailPathId" width="130px" height="106px" />
                                }
                            </div>
                        </div>
                        <input type="file" asp-for="ModThumbnailPath" id="ThumbnailPathId" class="form-control mt-2" accept="image/*">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button type="button" class="rounded btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="rounded btn btn-primary">Submit</button>
</form>
<script>
    $('.selectpicker').selectpicker();
    PageLoadActions();
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    function readURL(input, imageId) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#' + imageId).attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]); // convert to base64 string
        }
    }

    $("#ThumbnailPathId").change(function () {
        readURL(this, 'imageThumbnailPathId');
    });

</script>

