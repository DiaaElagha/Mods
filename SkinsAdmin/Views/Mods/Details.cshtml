@model SkinsAdmin.Models.Mods
@{
    ViewData["Title"] = "Mods";
}

@section Css{
    <style>
        td {
            padding: 5px 1px 5px 1px !important;
            font-size: 14px !important;
            color: #000000 !important
        }

        th {
            font-weight: bold !important;
            color: #210c56 !important
        }

        td a {
            margin-left: 5px !important;
        }

        .m-portlet__body {
            padding-top: 0px !important;
        }

        .dt-buttons {
            margin-top: 12px
        }

        div.m-input-icon.m-input-icon--left {
            border: 1px solid #bebebe
        }

        .panel-dash {
            border-radius: 8px !important
        }

        .list-group-item {
            padding-top: 18px;
            padding-bottom: 18px;
        }

        .card-dash {
            border-radius: 8px !important;
            font-weight: 700;
            font-size: 19px;
            text-align: center;
        }

            .card-dash h3.dash-number {
                font-weight: 700;
                font-size: 38px;
            }

        .line-dash {
            border: 0;
            clear: both;
            display: block;
            width: 100%;
            padding: 0px !important;
            background-color: #DFE0EB;
            height: 2px;
        }
    </style>
}

<h1 style="color:#000000;font-size:65px!important;font-weight:900;text-align:left"><b>Details Mod</b></h1>

<div class="kt-portlet kt-portlet--mobile panel-dash shadow-none bg-white">
    <div class="kt-portlet__body shadow-none bg-white" style="padding:30px!important">

        <div class="row">
            <div class="col-md-2">
                <a href="~/Mods/Index" class="font-weight-bold">
                    Back To Mods
                </a>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-md-12">
                <span style="font-size:18px;color:#182eb0!important;font-weight:bold">Mod Name : </span>
                <span style="font-size:18px">@Model.ModName</span>
            </div>
            <div class="col-md-3 pt-4">
                <span style="font-size:18px;color:#182eb0!important;font-weight:bold">Category Name : </span>
                <span style="font-size:18px">@Model.Category.Name</span>
            </div>
            <div class="col-md-9 pt-4">
                <span style="font-size:18px;color:#182eb0!important;font-weight:bold">Mod Url : </span>
                <span style="font-size:18px">@Model.ModUrl</span>
            </div>
            <div class="col-md-12 pt-4">
                <hr />
                <span style="font-size:18px;color:#182eb0!important;font-weight:bold">Mod Description : </span>
                <br />
                <p>
                    @Html.Raw(Model.ModDescription);
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>


    </script>
}
